{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:guilhermedelemos/node-boilerplate.git",
  "author": "Guilherme de Lemos <guilherme.eti@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "index": "node ./src/index.js",
    "test": "jest",
    "commit:tool": "cz",
    "changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 1"
